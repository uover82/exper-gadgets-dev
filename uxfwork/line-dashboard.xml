  <Content type="html"><![CDATA[

  <div id="loading"><img src="http://www.google.com/ig/images/spinner.gif" /></div>
  <div id="dashboard">
    <table>
      <tr style='vertical-align: top'>
        <td style='width: 20px; font-size: 0.9em;'>
          <div id="control"></div>
        </td>
        <td style='width: 1200px'>
          <div style="float: left;" id="chart"></div>
        </td>
      </tr>
    </table>
  </div>

  <script src="http://www.google.com/jsapi" type="text/javascript"></script>

  <script type="text/javascript">
    _IG_RegisterOnloadHandler(loadVisualizationAPI);

    var container;
    var dataTable;

    var options = {};

    var vAxis = {};
    options['vAxis'] = vAxis;

    var hAxis = {};
    options['hAxis'] = hAxis;

    var series = {};
    options['series'] = series;

    var vAxes = {};
    options['vAxes'] = vAxes;

    var prefs = new _IG_Prefs();
    var title = prefs.getString('title');
    if (title) {
      _IG_SetTitle(title);
    }      

    function loadVisualizationAPI() {
      google.load('visualization', '1.1', {packages: ['corechart','controls']});
      google.setOnLoadCallback(init);
    };

    var gadgetHelper;

    function init() {
      gadgetHelper = new google.visualization.GadgetHelper();
      container = document.getElementById('dashboard');
      container.style.width = document.body.clientWidth;
      container.style.height = document.body.clientHeight;
      options['title'] = prefs.getString('chartTitle');
      options['isStacked'] = prefs.getBool('stacked');
      //options['curveType'] = prefs.getBool('smoothline');
      options['curveType'] = 'none';
      options['pointSize'] = prefs.getBool('showpoints') ? 1 : 0;
      options['width'] = container.style.width.replace('px','');
      options['height'] = container.style.height.replace('px','');
      //var legendOptions = ['right', 'left', 'top', 'bottom', 'none'];
      //options['legend'] = legendOptions[prefs.getInt('legend')];
      options['interpolateNulls'] = true;

      vAxis['title'] = prefs.getString('labely');
      vAxis['logScale'] = prefs.getBool('vaxis_log_scale');

      hAxis['title'] = prefs.getString('labelx');

      if (prefs.getString('miny') != '') {
        vAxis['minValue'] = prefs.getInt('miny');
      }
      if (prefs.getString('maxy') != '') {
        vAxis['maxValue'] = prefs.getInt('maxy');
      }

      if (prefs.getString('minx') != '') {
        hAxis['minValue'] = prefs.getInt('minx');
      }
      if (prefs.getString('maxx') != '') {
        hAxis['maxValue'] = prefs.getInt('maxx');
      }

      if ( prefs.getString('raxis_series') != 'null' && prefs.getString('raxis_series') != '') {
        var series_elements = eval( prefs.getString('raxis_series') );
        for ( var i=0;i<series_elements.length;i++ )
          series[series_elements[i]] = { targetAxisIndex:1 };
        if ( prefs.getString('raxis_title') != 'null' && prefs.getString('raxis_title') != '') {
          var ra_title = prefs.getString('raxis_title');
          vAxes[0] = {};
          vAxes[1] = {};
          vAxes[1]['title'] = ra_title;
        } 
      }

      var pv = prefs.getBool('pct_view');

      if ( pv ) {
        vAxis[ 'format' ] = '###%';
      }

      var query = gadgetHelper.createQueryFromPrefs(prefs);
      query.send(responseHandler);
    };

    function responseHandler(response) {
      // Remove the loading message (if exists).
      var loadingMsgContainer = document.getElementById('loading');
      loadingMsgContainer.style.display = 'none';
     
      if (!gadgetHelper.validateResponse(response)) {
        // Default error handling was done, just leave.
        return;
      }

      dataTable = response.getDataTable();

      var tx = prefs.getBool("haxis_time_format");

      if ( tx )
        formatTimeXAxis( dataTable );

      var ref = getMaxColumn( dataTable );

      // Define a slider control for the y-axis.
      var slider = new google.visualization.ControlWrapper({
        'controlType': 'NumberRangeFilter',
        'containerId': 'control',
        'options': {
          'filterColumnIndex': ref, 'minValue': 0,
          'ui': { 'labelStacking':'horizontal','orientation':'vertical','label':'' }
        },
        'dataTable' : dataTable
      });

      // Define a Line chart
      var lineChart = new google.visualization.ChartWrapper({
        'chartType': 'LineChart',
        'containerId': 'chart',
        'options': options,
        'dataTable' : dataTable
      });
      
      lineChart.draw();
      slider.draw();

      function onControlStateChange() {
        var controlState = slider.getState();
        //var filteredView = filterView( dataTable,controlState.lowValue,controlState.highValue );
        //lineChart.setView( filteredView.toJSON() );
        var filteredTable = filterTable( dataTable,controlState.lowValue,controlState.highValue );
        lineChart.setDataTable( filteredTable.toJSON() );
        lineChart.draw();
      }

      google.visualization.events.addListener( slider,'statechange',onControlStateChange );
    };

    function formatTimeXAxis( _table ) {
      // format the x-axis in time-only format.
      var v;
      var sp;
      for ( var i = 0;i<_table.getNumberOfRows();i++ ) {
        v = _table.getValue( i,0 );
        sp = v.indexOf( ' ' );
        if ( sp > 0 ) {
          ts = v.substring( sp+1,v.length );
          _table.setValue( i,0,ts );
        }
      }
    };

    function getMaxColumn( _table ) {
      var max = 0;
      var ref = 0;
      for ( var i = 0;i<_table.getNumberOfRows();i++ )
        for ( var j = 1;j<_table.getNumberOfColumns();j++ ) {
          v = _table.getValue( i,j );
          if ( v>max ) {
            max = v;
            ref = j;
          }
      }

      return ref;
    };

    function filterView( _table,_min,_max ) {
      // filter a data table by min, max column values, producing a data view.
      var validColumns = [ 0 ];
      var cellValue;
      var valid;
      for ( var i = 1;i<_table.getNumberOfColumns();i++ ) {
        valid = true;
        for ( var j = 0;j<_table.getNumberOfRows() && valid;j++ ) {
          cellValue = _table.getValue( j,i );
          if ( (cellValue < _min || cellValue > _max) && cellValue != null )
            valid = false;
        }

        if ( valid )
          validColumns.push( i );
      }

      var filteredView = new google.visualization.DataView( _table );
      filteredView.setColumns( validColumns );

      return filteredView;
    }

    function filterTable( _table,_min,_max ) {
      // filter a data table by a min, max value.
      var cellValue;
      var filteredTable = _table.clone();
      for ( var i = 1;i<_table.getNumberOfColumns();i++ ) {
        for ( var j = 0;j<_table.getNumberOfRows();j++ ) {
          cellValue = _table.getValue( j,i );
          if ( (cellValue < _min || cellValue > _max) && cellValue !== null )
            filteredTable.setValue( j,i,null );
        }
      }

      return filteredTable;
    }

  </script>

